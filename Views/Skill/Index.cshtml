@model List<Skill>

<div class="container">
  <div class="row pt-4 pb-3">
  <div class="col-6">
   <h2 class="text-primary">
    skill List
    </h2>
   </div>
   <div class="col-6 text-end">
     <a asp-controller="Skill" asp-action="Create" class="btn btn-primary">
     <i class="bi bi-plus-circle"></i> Create New skill
     </a>
   </div>
 </div>
<div class="table-respnsive">
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                skill Id
            </th>
            <th>
                Skillname
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            <tr>
                <td>
                    @skill.Id
                </td>
                <td>
                    @skill.SkillName
                </td>
               
                <td>
                    <div class="w-75 btn-group" role="group">
                      <a asp-controller="Skill" asp-action="Edit"  class="btn btn-primary mx-2">
                      <i class="bi bi-pencil-square"></i>Edit
                     </a>
                     </div>
                    <div class="w-75 btn-group" role="group">
                      <a asp-controller="Skill" asp-action="Delete"  class="btn btn-delete mx-2">
                      <i class="bi bi-trash-fill"></i>Delete
                     </a>
                 
                    </div> 
                </td>
         </tr>
 }
    </tbody>
    </div>
</table>
</div>


 